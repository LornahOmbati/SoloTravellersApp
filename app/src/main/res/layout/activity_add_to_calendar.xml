<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddToCalendarActivity"
    android:orientation="vertical"
    android:background="@color/blue_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/lv_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Louvre Museum"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:paddingTop="40dp"
            android:fontFamily="@font/amaranth_bold" />

        <!-- Schedule Event Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCHEDULE EVENT"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:paddingTop="30dp"
            android:fontFamily="@font/amaranth_bold" />

        <!-- Event Name Input -->
        <EditText
            android:id="@+id/display_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:hint="Today"
            android:background="@drawable/edit_txt_bg"
            android:minHeight="48dp"
            android:inputType="text"
            android:textColorHint="#454545"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/amaranth" />

        <!-- Start and End Time Inputs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Start Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STARTS"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/amaranth_bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:hint="2:00PM"
                    android:background="@drawable/edit_txt_bg"
                    android:minHeight="48dp"
                    android:inputType="text"
                    android:textColorHint="#454545"
                    android:fontFamily="@font/amaranth" />
            </LinearLayout>

            <!-- End Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENDS"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/amaranth_bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:hint="5:00PM"
                    android:background="@drawable/edit_txt_bg"
                    android:minHeight="48dp"
                    android:inputType="text"
                    android:textColorHint="#454545"
                    android:fontFamily="@font/amaranth" />
            </LinearLayout>

        </LinearLayout>

        <!-- Calendar Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALENDAR"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:paddingTop="16dp"
            android:fontFamily="@font/amaranth_bold" />

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/eiffel_tower"
                    android:scaleY="1.5"
                    android:contentDescription="card1_image" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Visit the Eiffel Tower"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/jules_verne"
                    android:scaleX="1.3"
                    android:contentDescription="card2_image" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Jules Verne"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/nighttime_cruise"
                    android:scaleY="1.6v"
                    android:contentDescription="card3_image" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nighttime Cruise"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add to Calendar Button -->
        <Button
            android:id="@+id/addtocalendar_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_bg"
            android:text="Add to calendar"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/amaranth"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
