<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/image_1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/louvre_museum_image"
                android:scaleX="1.3"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/LV_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Louvre Museum"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_below="@+id/image_1"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth_bold"
            android:paddingStart="16dp"/>

        <TextView
            android:id="@+id/LI_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Louvre, or the Louvre Museum, is the worldâ€™s most-visited museum, and a historic landmark in Paris, France. It is the home of some of the best-known works of art, including the Mona Lisa and the Venus de Milo."
            android:layout_below="@+id/LV_txt"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/amaranth"
            android:paddingStart="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/map_layout"
            android:layout_below="@id/LI_txt"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/map_icon"/>
            <TextView
                android:id="@+id/map_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rue de Rivoli, 75001 Paris, France"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:fontFamily="@font/amaranth"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/time_layout"
            android:layout_below="@+id/map_layout"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/time_icon"/>
            <TextView
                android:id="@+id/time_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily, 9AM - 5PM"
                android:textSize="25sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:fontFamily="@font/amaranth"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/addtocalendar_btn"
            android:layout_below="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/card_bg"
            android:layout_height="88dp"
            android:text="Add to calendar"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/amaranth"/>
    </RelativeLayout>
</ScrollView>
