<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You're all booked!"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:paddingTop="40dp"
            android:paddingStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/amaranth_bold"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/image_1"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lm_img2"
                android:scaleX="1.3"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Louvre Museum"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:paddingTop="20dp"
            android:paddingStart="16dp"
            android:fontFamily="@font/amaranth_bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prepare for the event"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:paddingTop="20dp"
            android:paddingStart="16dp"
            android:fontFamily="@font/amaranth_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/map_layout"
            android:layout_below="@id/LI_txt"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/map_icon"/>
            <TextView
                android:id="@+id/map_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rue de Rivoli, 75001 Paris, France"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:fontFamily="@font/amaranth"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/more_layout"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/more_icon"/>
            <TextView
                android:id="@+id/more_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn more"
                android:textSize="25sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:fontFamily="@font/amaranth"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/photo_layout"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/photo_icon"/>
            <TextView
                android:id="@+id/photo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textSize="25sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:fontFamily="@font/amaranth"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/card_bg"
            android:layout_height="88dp"
            android:text="Close"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/amaranth"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</ScrollView>